<div class="d-flex align-items-center justify-content-between">
  <h1> Twitter accounts </h1>

  <%= link_to "Connect a Twitter account ", "/auth/twitter", method: :post,  class: "btn btn primary", data: {turbo: "false"}, class: "btn btn-primary"  %>
</div>


<% @twitter_accounts.each do |twitter_account| %>
  <div class="d-flex align-items-center mb-4">
    <div class="me-4">
      <%= image_tag twitter_account.image, class: "rounded-circle" %>
      <%= twitter_account.username %>
    </div>
  </div>
  <%= button_to "Disconect", twitter_account, method: :delete, data: {confirm: "Are you sure"} %>
<% end %>

  
